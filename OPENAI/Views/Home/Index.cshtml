@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col-sm-4">
            <div class="box box-default ">
                <div class="box-header with-border action-option">
                    <h3 class="box-title"></h3>
                </div>
                <div class="wrapper bg-light">
                    <div class="container bg-warning mt-2 mb-2">
                        <div class="inner-wrapper">
                            <div class="card mt-2 mb-2">
                                <div class="inner-card">
                                    <div class="img-wrapper">

                                    </div>
                                    <div class="content">
                                        <h1>Sentiment Analysis</h1>
                                        <p>Upload your file, train your model and predict the result!</p>
                                    
                                    </div>
                                    <div class="btn-wrapper">
                                        <a asp-controller="Sentiment" action="Index"><button class="btn btn-warning text-white mb-3" data-src="Sentiment/Index">Go</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-sm-4">
            <div class="box box-default ">
                <div class="box-header with-border action-option">
                    <h3 class="box-title"></h3>
                </div>
                <div class="wrapper bg-light">
                    <div class="container bg-info mt-1 mb-1">
                        <div class="inner-wrapper">
                            <div class="card">
                                <div class="inner-card">
                                    <div class="img-wrapper">

                                    </div>
                                    <div class="content">
                                        <h1>Fraud Detection System</h1>
                                        <p>Real-time transaction monitoring and classification</p>
                                    </div>
                                    <div class="btn-wrapper">
                                        <a asp-controller="Fraud" action="Index"><button class="btn btn-info text-white mb-3" data-src="Sentiment/Index">Go</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
