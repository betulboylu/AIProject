@{
    ViewData["Title"] = "Fraud Detection Results";
}
@model IEnumerable<TransactionResultViewModel>
<div class="card">
    <div class="card-header nav-link">
        <i class="fas fa-table me-1"></i>
        <h3 class="text-warning text-lg-left">FRAUD DETECTION RESULTS</h3>
    </div>
    <div class="card-body">
        <div class="content">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="font-weight-bold">Amount</th>
                        <th class="font-weight-bold">Hour</th>
                        <th class="font-weight-bold">Category</th>
                        <th class="font-weight-bold">Location</th>
                        <th class="font-weight-bold">Transaction Type</th>
                        <th class="font-weight-bold">HistoricalAvgAmount</th>
                        <th class="font-weight-bold">#Last24h</th>
                        <th class="font-weight-bold">IsFraudPredicted</th>
                        <th class="font-weight-bold">Score</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var t in Model)
                        {
                            <tr>
                                   <td class="">@t.Amount</td>
                                    <td class="">@t.HourOfDay</td>
                                    <td class="">@t.MerchantCategory</td>
                                    <td class="">@t.Location</td>
                                    <td class="">@t.TransactionType</td>
                                    <td class="">@t.HistoricalAvgAmount</td>
                                    <td class="">@t.NumTransactionsLast24h</td>
                                    <td class="">@t.IsFraudPredicted</td>
                                    <td class="">@t.Score</td>
                            </tr>

                        }
                    }
                </tbody>
        </table>
        </div>
                <a href="/">Upload Another CSV</a>
            </div>
        </div>


